.app-header
  color $light-text-color
  background $dark-background-color url(../images/zooniverse-icon-web-white-small.png) no-repeat right 
  background-size contain

  .title
    display inline-block
    padding 0 20px

  .link
    display inline-block
    margin 10px
    padding 10px
    color $light-text-color
    text-decoration none
    border-radius 3px
    &.active,
    &:hover
      color: $light-text-color
      background-color: $primary-color
