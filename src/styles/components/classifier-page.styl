.classifier-page
  display: flex
  flex-direction: row
  padding: 1rem 0
  
  .subject-viewer
    display: flex
    flex: 1 1 auto
    flex-direction: column
    
    .subject-controls
      align-items: stretch
      background: $white
      display: flex
      flex-direction: row
      font-size: (12/20)rem
      letter-spacing: (2/12)em
      text-transform: uppercase
      
      > span
        align-items: center
        display: flex
        margin-right: 2em
        
        span, .button
          margin-right: 1em
      
        &:first-child
          margin-left: 2em
          
      .filler
        flex: 1 1 auto
        justify-content: flex-end
        margin-right: 0
      
      > .button
        padding: 1.5em 2em
    
    .subject-images
      display: flex
      flex: 1 1 auto
      flex-direction: row
      
      .subject-image
        background: $dark-grey
        flex: 0 0 50%
        
      .subject-image:last-child  //TEMP just to differentiate two sides
        background: #444

  .classifier-controls
    display: flex
    flex-direction: column
    font-size: (12/20)rem
    justify-content: space-between
    margin: 0 1rem
    width: 10rem
    
    > *
      margin-bottom: 1em
      
    > *:last-child
      margin: 0
    
    > div
      background: $white
      flex: 1 1 auto
    
    .button
      display: block
      width: 100%
