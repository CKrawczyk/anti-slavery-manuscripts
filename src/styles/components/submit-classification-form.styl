.submit-classification-form
  font-size: 1rem
  
  .tasks
    border: 1px solid #ccc
    padding: 1em
    
    .questions
      font-size: 1.1em
      margin-bottom: 1em
    
    .answers
      .single-answer
        display: block
        margin-top: 0.5em
        cursor: pointer
        
        input[type=radio]
          margin-right: 1em
  
  .action-buttons
    display: flex
    justify-content: center
    padding: 0.5em
    
    button
      flex: 0 0 auto
      margin: 0 1em
